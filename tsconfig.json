{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ESNext"],
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": "./src",
    "paths": {
      "@navigation/*": ["./navigation/*"],
      "@api/*": ["./api/*"],
      "@screens/*": ["./screens/*"],
      "@utils/*": ["./utils/*"],
      "@store/*": ["./store/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
